        <!-- Left Section (Sidebar) -->
        <AnchorPane fx:id="leftAnchorPane" layoutY="97.0" prefHeight="780.0" prefWidth="240.0" styleClass="sidebar" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="97.0">
