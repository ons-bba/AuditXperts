                <Button onAction="#showPlanification" styleClass="sidebar-button" text="Planification" />
                <Button onAction="#showAudits" styleClass="sidebar-button" text="Audits" />
                <Button onAction="#showWorkspace" styleClass="sidebar-button" text="Workspace" />
            </VBox>
        </AnchorPane>

        <!-- Center Section -->
        <AnchorPane fx:id="holderPanel" layoutX="254.0" layoutY="97.0" prefHeight="780.0" prefWidth="1069.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="254.0" AnchorPane.rightAnchor="8.0" AnchorPane.topAnchor="97.0">
            <!-- Content will be dynamically loaded here -->
        </AnchorPane>
    </children>
</AnchorPane>
