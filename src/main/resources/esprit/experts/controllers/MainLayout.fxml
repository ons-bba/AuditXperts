<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane stylesheets="@mainLayout.css" xmlns:fx="http://javafx.com/fxml/1" fx:controller="esprit.experts.controllers.MainLayoutController">

    <top>
        <VBox style="-fx-background-color: #f0f0f0; -fx-padding: 10; -fx-spacing: 5;">
            <Label fx:id="welcomeLabel" style="-fx-font-size: 18px;" />
            <ImageView fx:id="userImageView" />
        </VBox>
    </top>

    <left>
        <VBox fx:id="sidebar" spacing="10" alignment="TOP_CENTER" styleClass="sidebar">
            <Button text="Users" styleClass="sidebar-button" onAction="#showUsers"/>
            <Button text="Profile Page" styleClass="sidebar-button" onAction="#showProfile"/>
            <Button text="Planification" styleClass="sidebar-button" onAction="#showPlanification"/>
            <Button text="Audits" styleClass="sidebar-button" onAction="#showAudits"/>
            <Button text="WorkSpace" styleClass="sidebar-button" onAction="#showWorkspace"/>
        </VBox>
    </left>

    <center>
        <BorderPane fx:id="contentPane" />
    </center>

</BorderPane>
