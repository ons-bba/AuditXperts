<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="800.0" prefWidth="1350.0" styleClass="background" stylesheets="@../style/style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="esprit.experts.controllers.Forget">
    <children>
        <AnchorPane layoutX="450.0" layoutY="250.0" prefHeight="300.0" prefWidth="450.0">
            <children>
                <Label layoutX="50.0" layoutY="30.0" styleClass="label" text="Forget Password">
                    <font>
                        <Font name="Arial" size="36" />
                    </font>
                </Label>

                <Label layoutX="50.0" layoutY="90.0" styleClass="label" text="Enter your email address to reset your password:">
                    <font>
                        <Font name="Arial" size="18" />
                    </font>
                </Label>

                <TextField fx:id="text" layoutX="50.0" layoutY="130.0" prefWidth="250.0" promptText="Email" />

                <Button fx:id="email" layoutX="50.0" layoutY="180.0" onAction="#onforget" styleClass="button" text="Send Reset Link" />
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
